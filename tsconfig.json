{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noEmit": true,
		"skipLibCheck": true,
		"lib": ["dom", "es2018"],
		"suppressImplicitAnyIndexErrors": true,
		"esModuleInterop": true,
		"jsx": "react"
	},
	"include": ["src", "test"]
}
