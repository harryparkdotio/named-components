{
	"name": "named-components",
	"description": "styled-components without style",
	"version": "0.1.2",
	"main": "named.js",
	"types": "named.d.ts",
	"repository": "git@github.com:harryparkdotio/named-components.git",
	"author": "Harry Park <harry@harrypark.io>",
	"license": "MIT",
	"scripts": {
		"prettier": "prettier --write '{src,test}/**/*.ts' '*.{json,js,md}'",
		"commit": "git-cz",
		"release": "np --no-publish",
		"build": "tsc -p tsconfig.build.json",
		"postbuild": "cp package.json dist/ && cp readme.md dist/ && cp license dist/",
		"cover": "codecov",
		"lint": "yarn lint:code && yarn lint:prettier",
		"lint:code": "tslint -t codeFrame '{src,test}/**/*.ts'",
		"lint:prettier": "prettier --list-different '{src,test}/**/*.ts' '*.{json,js,md}'",
		"test": "yarn lint && yarn test:typecheck && yarn test:unit",
		"test:typecheck": "tsc",
		"test:unit": "jest --runInBand"
	},
	"dependencies": {
		"react": "^16.0.0"
	},
	"optionalDependencies": {
		"react-dom": "^16.6.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^7.2.0",
		"@commitlint/config-conventional": "^7.1.2",
		"@commitlint/travis-cli": "^7.2.0",
		"@types/enzyme": "^3.1.14",
		"@types/enzyme-adapter-react-16": "^1.0.3",
		"@types/jest": "^23.3.3",
		"@types/react": "^16.4.15",
		"@types/react-dom": "^16.0.8",
		"codecov": "^3.1.0",
		"commitizen": "^3.0.2",
		"cz-conventional-changelog": "^2.1.0",
		"enzyme": "^3.7.0",
		"enzyme-adapter-react-16": "^1.6.0",
		"husky": "^1.1.1",
		"jest": "^23.6.0",
		"lint-staged": "^7.3.0",
		"np": "*",
		"prettier": "^1.14.3",
		"ts-jest": "^23.10.3",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^3.1.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-push": "yarn test"
		}
	},
	"lint-staged": {
		"{src,test}/**/*.ts": [
			"tslint -t codeFrame",
			"prettier --write",
			"git add"
		],
		"*.{json,js,md}": [
			"prettier --write",
			"git add"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
